<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFE"
        android:gravity="center_horizontal|fill_vertical"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="elton"
            android:textAlignment="center"
            android:textColor="#08A8D4"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_subtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Calculadora IMC"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView_espaco1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:src="@drawable/icon3"
            tools:src="@drawable/icon3" />

        <TextView
            android:id="@+id/textView_espaco2"
            android:layout_width="match_parent"
            android:layout_height="100sp" />

        <TextView
            android:id="@+id/textView_peso"
            android:layout_width="233dp"
            android:layout_height="25dp"
            android:text="Peso"
            android:textAlignment="center"
            android:textColor="#373737"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText_peso"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_component"
            android:ems="10"
            android:fontFamily="@font/poppins_bold"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="#2B2929"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_altura"
            android:layout_width="232dp"
            android:layout_height="25dp"
            android:text="Altura"
            android:textAlignment="center"
            android:textColor="#373737"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText_altura"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_component"
            android:ems="10"
            android:fontFamily="@font/poppins_bold"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="#2B2929"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_espaco3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/button_calcular"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:background="#08A8D4"
            android:fontFamily="@font/poppins_bold"
            android:onClick="calculateButtonOnClick"
            android:padding="10dp"
            android:text="Calcular"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>