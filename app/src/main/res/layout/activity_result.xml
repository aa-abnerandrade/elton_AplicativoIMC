<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/textView_Result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="elton"
            android:textAlignment="center"
            android:textColor="#08A8D4"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_classificacaoresultado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:background="#8008A7D3"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="4"
            android:text="..."
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Result_title" />

        <TextView
            android:id="@+id/textView_descricaoresultado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="4"
            android:text="Descrição do resultado"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_classificacaoresultado" />

        <TextView
            android:id="@+id/textView_Resultado_espaco2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="527dp" />

        <Button
            android:id="@+id/button_Result_voltar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:background="@drawable/rounded_component"
            android:onClick="voltarButtonOnClick"
            android:text="Editar Dados"
            android:textAlignment="center"
            android:textColor="#08A8D4"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_classificacaoresultado" />

        <Button
            android:id="@+id/button_Result_novo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:background="@drawable/rounded_component"
            android:text="Calcular Novo"
            android:textAlignment="center"
            android:textColor="#08A8D4"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.809"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_classificacaoresultado" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>